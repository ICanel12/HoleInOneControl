@model HoleInOneControlModel.Login

@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


<style>
  body {
    background-image: url(@Url.Content("~/dist/img/Login.jpg"));
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
  }
</style  >  


<section class="d-flex align-items-center justify-content-center" style="height: 100vh">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="width: 600px; background-color: rgba(0, 0, 0, 0.5) !important; color: white;">
                <form method="post" asp-action="Login">
                    <div class="card-header  mt-3" style="padding: 15px 50px 15px 50px !important;">
                        <h3 class="mb-2" style="text-align: center; padding-bottom: 11px;">@ViewData["Title"]</h3>
                        <div style="text-align: center;">
                            <img class="logo" src="~/dist/img/Logo.jpg" alt="" style="width: 20%;border-radius: 50px;">
                        </div>

                    </div>
                    <div class="card-body" style="padding: 15px 50px 15px 50px !important;">
                        <div class="row">
                            <div class="col-md-12">
                                <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="userName" class="control-label">Usuario:</label>
                                    <input asp-for="userName" class="form-control" placeholder="Ingrese Usuario" style="width: 100%; margin: 8px 0; box-sizing: border-box; border: 2px solid white; outline: none; color: white; font-size: 16px; background-color:rgba(0, 0, 0, 0.5) !important;" />
                                    <span asp-validation-for="userName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="password" class="control-label">Contraseña:</label>
                                    <input asp-for="password" type="password" class="form-control"  placeholder="Ingrese Contraseña" style="width: 100%; margin: 8px 0; box-sizing: border-box; border: 2px solid white; outline: none; color: white; font-size: 16px; background-color:rgba(0, 0, 0, 0.5) !important;"/>
                                    <span asp-validation-for="password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer" style="text-align: center; margin-bottom: 32px;">
                        <input type="submit" value="Ingresar" class="btn btn-success" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>