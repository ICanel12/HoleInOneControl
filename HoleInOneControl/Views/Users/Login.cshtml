
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div class="d-flex align-items-center justify-content-center" style="height: 100vh; background-color: #152715">
    <div class="card" style="width: 600px; background-color: rgba(0, 0, 0, 0.5) !important; color: white;">
        <div class="card-header mt-3" style="padding: 15px 50px 15px 50px !important;">
            <h3 class="mb-2" style="text-align: center; padding-bottom: 11px;">Iniciar Sesión</h3>
            <div style="text-align: center;">
                <img class="logo" src="~/dist/img/Logo.jpg" alt="" style="width: 20%;border-radius: 50px;">
            </div>

        </div>

        <div class="card-body" style="padding: 15px 50px 15px 50px !important;">
            <form>
                <div class="form-group">
                    <label for="usuario">Usuario:</label>
                    <input type="text" class="form-control" placeholder="Ingrese Usuario" name="usuario" style="width: 100%; margin: 8px 0; box-sizing: border-box; border: 2px solid white; outline: none; color: white; font-size: 16px; background-color:rgba(0, 0, 0, 0.5) !important;">
                </div>
                <div class="form-group">
                    <label for="pass">Contraseña:</label>
                    <input type="password" class="form-control" placeholder="Ingrese Contraseña" name="pass" style="width: 100%; margin: 8px 0; box-sizing: border-box; border: 2px solid white; outline: none; color: white; font-size: 16px; background-color:rgba(0, 0, 0, 0.5) !important;">
                </div>

                <div class="form-group mt-5" style="text-align: center;">
                    <a class="btn btn-success" href="~/Home/Index">Iniciar Sesión</a>
                </div>
            </form>
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-center mb-5">
                ¿No tienes una cuenta?
                <a href="#" class="sign-up" style="margin-left: 5px;">Registrarse</a>
            </div>
        </div>
    </div>

</div>
