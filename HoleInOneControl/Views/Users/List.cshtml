@model IEnumerable<HoleInOneControlModel.User>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card-header" style="text-align: end;">
    <button type="button" class="btn btn-success">
        <a asp-action="Create" style="color: white">Agregar</a>
    </button>
</div>

<div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Usuario
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Contraseña
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdUser">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdUser">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


